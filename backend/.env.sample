# Banking App Backend Environment Configuration
# Copy this file to .env and customize values for your environment

# Application Settings
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=127.0.0.1
PORT=8000
RELOAD=true
LOG_LEVEL=info
WORKERS=1

# Database Configuration
DATABASE_URL=sqlite:///./banking_app.db
DATABASE_PATH=./banking_app.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30

# Security Settings
SECRET_KEY=banking-app-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
API_PAGE_SIZE=50
API_MAX_PAGE_SIZE=100
API_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=./logs/banking_app.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5